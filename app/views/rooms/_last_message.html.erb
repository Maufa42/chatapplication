<% unless last_message.nil? %>
  <div class = "row">
    <div class = "col-12 flex items-center justify-between">
      <em class = "last-message">
      <%= "#{last_message.user.email} sent a message".truncate(40)%>
      </em>
      <em class = "last-message">
        <%= "#{time_ago_in_words(last_message.created_at)} ago"%>
      </em>
    </div>
  </div>
<%end%>